<h1><%= @place["name"] %></h1>

<h2>My Entries</h2>
<div class="row">
  <% for entry in @entries %>
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <% if entry.image.attached? %>
          <img src="<%= url_for(entry.image) %>" class="card-img-top img-fluid mb-2" style="height: 200px; object-fit: cover;">
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= entry["title"] %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= entry["occurred_on"] %></h6>
          <p class="card-text"><%= entry["description"] %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>

<p>
  <a class="btn btn-primary" href="/entries/new?place_id=<%= @place["id"] %>">New Entry</a>
</p>

<p>
  <a href="/places">Back to All Places</a>
</p>